<%= form_for(@storyline, :html => { :class => "centralize" }) do |f| %>
  <% if @storyline.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@storyline.errors.count, "error") %> prohibited this storyline from being saved:</h2>

      <ul>
      <% @storyline.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- <%= f.label :line %><br /> -->
    <%= f.text_area :line, :size => 60, :placeholder => @placeholder_text %>
  </div>
  <div class="actions">
    <% if not @storyline.prev.blank? %>
      <%= hidden_field_tag "randomize", "1" %>
      <%= f.hidden_field :prev %>
    <% end %>
    <%= f.submit "I'm done!" %>
  </div>
<% end %>
