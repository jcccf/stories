<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <!-- <%= f.label :name %><br /> -->
    <%= f.text_field :name, size: 40, :placeholder => 'Name'  %>
  </div>
  <div class="field">
    <!-- <%= f.label :password, 'Password' %>: -->
    <%= f.password_field :password, size: 40, :placeholder => 'Password'  %>
  </div>
  <div class="field">
    <!-- <%= f.label :password_confirmation, 'Confirm' %>: -->
    <%= f.password_field :password_confirmation, size: 40, :placeholder => 'Retype Password'  %>
  </div>
  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.text_field :email, size: 40, :placeholder => 'Email'  %>
  </div>
  <div class="actions">
    <%= f.submit 'Register' %>
  </div>
<% end %>
