<%= form_for(@feedback, :html => { :class => "feedback_form popup" }, :remote => true) do |f| %>
  <% if @feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% @feedback.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <h4>Send Feedback</h4>
  Encountered a problem while using Storeys, or have a suggestion? Let us know!
  <%= f.text_area :comment, :size => 60, :placeholder => "Try to be as descriptive as you can!" %>
  
  <%= f.hidden_field :url %>
  <div class="actions">
    <%= f.submit "Send" %>
  </div>
<% end %>
